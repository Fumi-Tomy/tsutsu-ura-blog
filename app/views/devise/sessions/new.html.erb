<div class="container mx-auto px-4">
  <div class="flex flex-col md:flex-row gap-8">
    <!-- ログインフォームのセクション -->
    <div class="w-full md:w-1/2">
      <div class="bg-white shadow-md rounded-lg p-6 mb-3">
        <div class="card-body">
          <h5 class="text-red-600 text-3xl font-bold mb-4"><strong><span class="text-red-600">ログイン</span></strong></h5>
          <p class="text-gray-700 mb-6">作成したアカウントでログインしてください。</p>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>      
            <div class="mb-5 mt-5">
              <label for="email" class="block text-gray-700 text-sm font-bold mb-2">Eメールアドレス</label>
              <%= f.email_field :email, autofocus: true, placeholder: "Eメールアドレス", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
              <p id="email_help" class="text-gray-600 text-xs italic mt-1">あなたのメールは他の誰とも共有しません。</p>
            </div>
            <div class="mb-5">
              <label for="password" class="block text-gray-700 text-sm font-bold mb-2">パスワード</label>
              <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
              <p id="password_help" class="text-gray-600 text-xs italic mt-1">登録した6文字以上のパスワード入力が必要です。</p>
            </div>          
            <% if devise_mapping.rememberable? %>
            <div class="flex items-center mb-5">
              <%= f.check_box :remember_me, class: "mr-2 leading-tight" %>
              <label for="remember_me" class="text-sm text-gray-700">ログインを保持</label>
            </div>
            <% end %>            
            <%= f.submit "ログイン", class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full" %>
          <% end %>
          <div class="mt-4">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
